<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bankicon"
                android:layout_marginLeft="24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="SBI"
                android:id="@+id/tv_bank"
                android:textStyle="bold"
                android:textColor="@color/DarkBrown"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="24dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Saving account"
                android:textStyle="bold"
                android:id="@+id/tv_accountnumber"
                android:textColor="@color/LightBrown"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="24dp"/>
            <TextView
                android:visibility="gone"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="@string/Primary"
                android:textStyle="bold"
                android:id="@+id/tvisprimary"
                android:textColor="@color/LightBrown"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:visibility="gone"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="@string/Edit"
                android:id="@+id/bt_edit"
                android:textStyle="bold"
                android:textColor="@color/Gold"
                android:layout_marginLeft="62dp" />
            <TextView
                android:visibility="gone"
                android:id="@+id/bt_remove"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="@string/Delete"
                android:textStyle="bold"
                android:textColor="@color/Gold"
                android:layout_marginLeft="24dp" />
            <TextView
                android:id="@+id/set_bank_primary"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="@string/SetasPrimary"
                android:textStyle="bold"
                android:gravity="end"
                android:textColor="@color/Gold"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="62dp" />
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/tvmessage"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text=""
            android:textStyle="bold"
            android:gravity="end"
            android:textColor="@color/Gold"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp" />

        <View
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:background="@color/LightBrown2"/>
    </LinearLayout>

</LinearLayout>