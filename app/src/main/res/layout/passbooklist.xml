<LinearLayout
    android:layout_margin="7dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#dce0dd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llclick"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:backgroundTint="@color/colorWhite"
                android:layout_width="35dp"
                android:layout_height="90dp"
                android:src="@drawable/rightick" />

            <LinearLayout
                android:layout_marginLeft="7dp"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pass_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="13dp"
                    android:textColor="@color/DarkBrown" />

                <TextView
                    android:id="@+id/pass_transctionid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="13dp"
                    android:textColor="@color/DarkBrown" />

                <!--                <TextView-->
                <!--                    android:id="@+id/pass_txntype"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:text=""-->
                <!--                    android:textSize="13dp"-->
                <!--                    android:textColor="@color/textcolorprimary" />-->


                <TextView
                    android:id="@+id/pass_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="13dp"
                    android:textColor="@color/DarkBrown" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13dp"
                    android:id="@+id/pass_amount"
                    android:textColor="@color/DarkBrown"/>

                <TextView
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/DarkBrown"
                    android:id="@+id/pass_grams"/>

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="start|center"
            android:layout_width ="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/DarkBrown"
            android:text=""
            android:background="@color/white"
            android:textSize="14dp"
            android:id="@+id/tvpassstatus"/>


    </LinearLayout>



</LinearLayout>