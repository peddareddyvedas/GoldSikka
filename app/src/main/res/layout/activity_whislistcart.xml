<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/pwishcard"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_weight="1">


                    <ImageView
                        android:id="@+id/pimg"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp" />


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/pnameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text=""
                            android:layout_marginEnd="70dp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/wdelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:visibility="gone"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/ic_baseline_close_24" />

                    <TextView
                        android:id="@+id/statustxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/bottomborder"
                        android:backgroundTint="@color/gray"
                        android:paddingHorizontal="7dp"
                        android:paddingVertical="3dp"
                        android:text="pending"
                        android:textColor="@color/white"
                        android:visibility="visible" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/l1"
                        android:layout_below="@id/pnameTv"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Id           :    "
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/pid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:padding="5dp"
                            android:text=""
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/l2"
                        android:layout_below="@id/l1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Weight  :    "
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/pweightTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:paddingLeft="5dp"
                            android:text=""
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_below="@id/l2"
                        android:id="@+id/l3"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="V.A         :    "
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/pvaTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:paddingLeft="5dp"
                            android:text=""
                            android:textColor="@android:color/black" />
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/l3"
                        android:id="@+id/pl"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:layout_marginTop="7dp">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progressDrawable="@drawable/progress_drawableforupdate" />

                        <TextView
                            android:id="@+id/progresstext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/black" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/accumulate"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_below="@id/pl"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/button_background"
                        android:backgroundTint="@color/Gold"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:text="Accumulate Gold"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/transactions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pl"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="10dp"
                        android:text="View Transactions >>"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linerargoldEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:background="@color/lightgray"/>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/gtv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Gold Vault Balance :"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="@color/colorBlue"
                        android:src="@drawable/tsellgold" />

                    <TextView
                        android:id="@+id/gamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/gtv1"
                        android:text=""
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gtv1"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:id="@+id/gadd"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_grams"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:inputType="number"
                        android:paddingStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:textColorHint="@color/LightBrown"
                        android:textSize="12dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_below="@id/gtv1"
                        android:background="@drawable/button_background"
                        android:backgroundTint="@color/Gold"
                        android:text="Add Gold"
                        android:id="@+id/buyjewellery"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/errormessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gadd"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/em1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/gadd"
                        android:layout_marginStart="15dp"
                        android:text=""
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/em2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/gadd"
                        android:visibility="gone"
                        android:layout_marginStart="5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/errormessage"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Note : Don't enter the decimal value*"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/wtransactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/errormessage"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="View Transactions >>"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/wishlistitemdata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>