<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_list_card1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="15dp"
    android:backgroundTint="@color/white"
    android:elevation="8dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/layoutll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/ic_mainlogo" />


        <TextView
            android:id="@+id/sub_cat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/item_img"
            android:text="cdggdvbhdvc"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sub_cat_name"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/item_img"
            android:text="cdggdvbhdvc"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/linearlayoutbackground"
            android:padding="5dp"
            android:text="Order Status" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>

