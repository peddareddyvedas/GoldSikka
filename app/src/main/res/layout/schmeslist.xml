<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cd_scheme"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/iv_scheme"
            android:src="@drawable/mygoldnew"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_schemename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:textAppearance="@style/my_gold_202"
                android:lineSpacingExtra="4sp"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/spp_on_gold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:text="@string/spp_on_gold"
                android:textAppearance="@style/spp_on_gold"
                android:lineSpacingExtra="1sp"
                android:gravity="center_vertical"
                />

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/LightBrown2"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"/>
</LinearLayout>