<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dr1"
                android:src="@drawable/goldsikka_logo2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="13dp"
                android:textStyle="bold"
                android:gravity="end"
                android:layout_weight="1"
                android:id="@+id/title"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:textColor="@color/DarkBrown" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="end"
                    android:id="@+id/uname"
                    android:textColor="@color/Gold"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/uid"
                    android:gravity="end"
                    android:textColor="@color/Gold"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/LightBrown2"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="vertical"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">

                <Spinner
                    android:id="@+id/spin_title"
                    android:backgroundTint="@color/DarkBrown"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"/>

            </LinearLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text=""
                android:id="@+id/address_type"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/red" />



            <EditText

                android:id="@+id/et_customeraddress"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/Address"
                android:textColor="@color/DarkBrown"
                android:textColorHint="@color/LightBrown"
                android:textSize="16dp"
                android:paddingLeft="12dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_erroraddress"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text=""
                android:textColor="@color/red" />
            <EditText
                android:id="@+id/et_customercity"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:textColorHint="@color/LightBrown"
                android:background="@drawable/edittext_background"
                android:hint="@string/City"
                android:textColor="@color/DarkBrown"
                android:textSize="16dp"
                android:paddingLeft="12dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_city"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text=""
                android:textColor="@color/red"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="vertical"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">

                <Spinner
                    android:id="@+id/spin_state"
                    android:backgroundTint="@color/DarkBrown"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_state"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text=""
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/et_pincode"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/Zip_Code"
                android:textColor="@color/DarkBrown"
                android:textColorHint="@color/LightBrown"
                android:textSize="16dp"
                android:inputType="number"
                android:paddingLeft="12dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_pin"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text=""
                android:textColor="@color/red" />

            <Button
                android:id="@+id/btn_addaddress"
                android:layout_marginTop="98dp"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/button_background"
                android:backgroundTint="@color/Gold"
                android:text="@string/Add_Address"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>