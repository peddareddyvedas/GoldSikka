<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/backbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/arrowleft" />

                <ImageView
                    android:id="@+id/dr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/back"
                    android:src="@drawable/goldsikka_logo2" />

            </RelativeLayout>


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="15dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/DarkBrown"
                android:textSize="13dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/uname"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/Gold"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/uid"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text=""
                    android:textColor="@color/Gold"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/view"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LightBrown2"/>

    <ScrollView
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_below="@id/view"
                android:id="@+id/rlGoldWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="34dp"
                android:background="@drawable/goldwallet_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gold_wallet"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="16dp"
                        android:textSize="12dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_wallet_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/walletGold"
                android:layout_below="@id/rlGoldWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="292dp"
                android:layout_marginTop="-85dp"
                android:src="@drawable/goldsikkawallet_watermark"/>

            <RelativeLayout
                android:id="@+id/etgrams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/liveRate"
                android:layout_marginTop="32dp">

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You have selected the no."
                        android:layout_marginLeft="24dp"
                        android:textSize="12dp"
                        android:textColor="@color/DarkBrown"/>

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="24dp"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/DarkBrown"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lltime"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvgrams"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/enter_grams"
                        android:textSize="12dp"
                        android:textColor="@color/DarkBrown"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="24dp"/>

                    <TextView
                        android:id="@+id/tv_second_title"
                        android:visibility="visible"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="24dp"
                        android:text=""
                        android:textSize="15dp"
                        android:textColor="@color/DarkBrown"
                        android:gravity="end"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/gift_grms"
                    android:layout_below="@id/lltime"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:textSize="14dp"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/LightBrown"
                    android:background="@drawable/edittext_background"
                    android:layout_marginTop="12dp"
                    android:paddingLeft="12dp"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_grams"
                    android:layout_below="@id/gift_grms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/red"
                    android:textSize="10dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_amount"
                    android:layout_below="@id/tv_grams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/red"
                    android:textSize="10dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llmoney"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/etgrams">

                <TextView
                    android:id="@+id/giftamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="24dp"
                    android:text=""
                    android:textSize="12dp"
                    android:textColor="@color/DarkBrown"/>

                <TextView
                    android:id="@+id/amount_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="24dp"
                    android:text=""
                    android:textSize="12dp"
                    android:textColor="@color/DarkBrown"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_amount"
                android:layout_marginTop="300dp">

                <TextView
                    android:id="@+id/tvtwograms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/you_cannot_enter_decimal_values"
                    android:textColor="@color/LightBrown"
                    android:visibility="gone"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_below="@id/tvtwograms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_gravity="center"
                        android:id="@+id/loading_gif"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:tint="@color/Gold"
                        android:src="@drawable/loading_gif" />

                    <Button
                        android:id="@+id/gift_send"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/button_background"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="24dp"
                        android:text="@string/next"
                        android:backgroundTint="@color/Gold"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>