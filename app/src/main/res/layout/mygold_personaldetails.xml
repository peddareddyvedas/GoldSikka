<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/goldsikka_logo2" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text=""
                    android:textColor="@color/DarkBrown"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/uname"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@color/Gold" />

                    <TextView
                        android:id="@+id/uid"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@color/Gold" />
                </LinearLayout>
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/background"
            xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout
            android:background="@color/background"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Personal Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5sp">

                <EditText
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:id="@+id/pd_fullname"
                    android:layout_marginTop="25sp"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:background="@drawable/edittext_border"
                    android:hint="Full Name *"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <EditText
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:inputType="text"
                    android:id="@+id/pd_fhname"
                    android:layout_marginTop="15sp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/edittext_border"
                    android:hint="Father/Husband Name *"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <TextView
                    android:fontFamily="@font/calibri"
                    android:textStyle="normal"
                    android:textColor="@color/colorWhite"
                    android:paddingTop="10sp"
                    android:paddingLeft="3sp"
                    android:text="Gender *"
                    android:textSize="23sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <RadioGroup
                    android:id="@+id/pd_gender"
                    android:orientation="horizontal"
                    android:paddingTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"
                        android:textColor="@color/colorWhite"
                        android:paddingLeft="5sp"
                        android:textSize="20sp"
                        android:text="Male"
                        android:checked="true" />
                    <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:buttonTint="@color/colorPrimary"
                        android:textSize="20sp"
                        android:paddingLeft="5sp"
                        android:text="Female" />
                    <RadioButton
                        android:id="@+id/radioOthers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:buttonTint="@color/colorPrimary"
                        android:textSize="20sp"
                        android:paddingLeft="5sp"
                        android:text="Others" />
                </RadioGroup>

                <EditText
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:id="@+id/pd_Email"
                    android:layout_marginTop="15sp"
                    android:paddingLeft="10dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edittext_border"
                    android:hint="Email *"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <EditText
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:id="@+id/pd_phnumber"
                    android:layout_marginTop="15sp"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:background="@drawable/edittext_border"
                    android:hint="Phone number *"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <EditText
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:id="@+id/pd_alternatenum"
                    android:layout_marginTop="15sp"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:background="@drawable/edittext_border"
                    android:hint="Alternate ph.no"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <EditText
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:id="@+id/pd_address"
                    android:layout_marginTop="15sp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/edittext_border"
                    android:hint="Address *"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <EditText
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:id="@+id/pd_city"
                    android:layout_marginTop="15sp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/edittext_border"
                    android:hint="City/Town/Village *"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <EditText
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:id="@+id/pd_state"
                    android:layout_marginTop="15sp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/edittext_border"
                    android:hint="State *"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <EditText
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:id="@+id/pd_country"
                    android:layout_marginTop="15sp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/edittext_border"
                    android:hint="Country *"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <EditText
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:id="@+id/pd_pincode"
                    android:layout_marginTop="15sp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/edittext_border"
                    android:hint="Pincode *"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp">

                <Button
                    android:id="@+id/btn_pd"
                    android:layout_margin="20dp"
                    android:text="Next"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/edittext_border"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

            </LinearLayout>



        </LinearLayout>

        </ScrollView>

    </LinearLayout>



</FrameLayout>