<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/llinformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RelativeLayout
                            android:id="@+id/backbtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/back"
                                android:layout_width="25dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/arrowleft" />

                            <ImageView
                                android:id="@+id/dr1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/back"
                                android:src="@drawable/goldsikka_logo2" />

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:padding="15dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/DarkBrown"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/uname"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="end"
                                android:paddingTop="10dp"
                                android:singleLine="true"

                                android:text=""
                                android:textColor="@color/Gold"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/uid"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text=""
                                android:textColor="@color/Gold"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.appcompat.widget.Toolbar>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/LightBrown2" />

                <TextView
                    android:id="@+id/tv_second_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="end"
                    android:text="00:00"
                    android:textColor="@color/textcolorprimary"
                    android:textSize="20dp"
                    android:textStyle="normal"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvliverate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="58000"
                            android:textColor="@color/textcolorprimary" />

                        <TextView
                            android:id="@+id/tvgold_grams"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Live Gold Rate / 1 grm"
                            android:textColor="@color/textcolorprimary" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/textcolorprimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Order Summary"
                        android:textColor="@color/textcolorprimary" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/textcolorprimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Quantity"
                                android:textColor="@color/textcolorprimary" />

                            <TextView
                                android:id="@+id/tv_quantity"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/textcolorprimary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Amount"
                                android:textColor="@color/textcolorprimary" />

                            <TextView
                                android:id="@+id/tv_amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/textcolorprimary" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lloffer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Coupon  Gold"
                                android:textColor="@color/textcolorprimary" />

                            <TextView
                                android:id="@+id/tvoffergold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/textcolorprimary" />

                        </LinearLayout>

                        <!--            <LinearLayout-->
                        <!--                android:layout_marginTop="10dp"-->
                        <!--                android:gravity="center"-->
                        <!--                android:layout_weight="1"-->
                        <!--                android:orientation="horizontal"-->
                        <!--                android:layout_width="match_parent"-->
                        <!--                android:layout_height="wrap_content">-->

                        <!--                <TextView-->
                        <!--                    android:layout_weight="1"-->
                        <!--                    android:gravity="start"-->
                        <!--                    android:textColor="@color/textcolorprimary"-->
                        <!--                    android:text="GST"-->
                        <!--                    android:layout_width="0dp"-->
                        <!--                    android:layout_height="wrap_content"/>-->

                        <!--                <TextView-->
                        <!--                    android:id="@+id/tv_tax"-->
                        <!--                    android:layout_weight="1"-->
                        <!--                    android:textColor="@color/textcolorprimary"-->
                        <!--                    android:layout_width="0dp"-->
                        <!--                    android:layout_height="wrap_content"/>-->

                        <!--            </LinearLayout>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Total Discount"
                                android:textColor="@color/textcolorprimary" />

                            <TextView
                                android:id="@+id/tv_totaldiscount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/textcolorprimary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="@string/gst"
                                    android:textColor="@color/textcolorprimary" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="(GST(3%),TCS(0.1%),TDS(0.1%),OtherLevies)"
                                    android:textColor="@color/textcolorprimary"
                                    android:textSize="8dp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_totalamount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/textcolorprimary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Total Amount"
                                android:textColor="@color/textcolorprimary" />

                            <TextView
                                android:id="@+id/tv_total_amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/textcolorprimary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Roundoff Value"
                                android:textColor="@color/textcolorprimary" />

                            <TextView
                                android:id="@+id/tv_roundoffvalue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/textcolorprimary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/wallet_check"
                                android:layout_width="30dp"
                                android:layout_height="20dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Use Booking Account"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tv_wallet_money"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/black" />

                            </LinearLayout>

                        </LinearLayout>

                        <EditText
                            android:id="@+id/et_wallet_money"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="24dp"
                            android:background="@drawable/edittext_background"
                            android:drawableLeft="@drawable/rupeerupee"
                            android:drawablePadding="10dp"
                            android:inputType="number"
                            android:paddingLeft="12dp"
                            android:textColorHint="@color/LightBrown"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_wallet_error"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Amount Payable"
                                android:textColor="@color/textcolorprimary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_paybleamount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/textcolorprimary"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/doyouhave"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvknowother"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="24dp"
                            android:text="@string/do_you_have_any_referral_code"
                            android:textColor="@color/LightBrown" />

                        <EditText
                            android:id="@+id/etreferralcode"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_below="@id/doyouhave"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="24dp"
                            android:background="@drawable/referral_bg"
                            android:hint="@string/referral_code"
                            android:paddingLeft="12dp"
                            android:textColor="@color/DarkBrown"
                            android:textColorHint="@color/LightBrown"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_referal_code_error"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/red" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/loading_gif"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/loading_gif"
                            android:tint="@color/primarybackground"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btn_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/button_background"
                            android:backgroundTint="@color/Gold"
                            android:text="Payment"
                            android:textColor="@color/white"
                            android:textSize="18dp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>