<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/Gold">


        <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <RelativeLayout
                    android:id="@+id/backbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/arrowleft" />

                    <ImageView
                        android:id="@+id/dr1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/back"
                        android:src="@drawable/goldsikka_logo2" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/DarkBrown"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/uname"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/uid"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/refer_and_earn"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle_icon"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginTop="-210dp"
            android:layout_marginLeft="230dp"
            android:src="@drawable/gslogo"/>

    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llcard"
        android:id="@+id/swipe_layout">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/invite_others_to"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textColor="@color/LightBrown"/>

                <LinearLayout
                    android:id="@+id/lldetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/tvinfo"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/download"
                                android:textSize="14dp"
                                android:textColor="@color/LightBrown"
                                android:layout_marginLeft="24dp"/>

                            <TextView
                                android:id="@+id/tvdownloads"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/DarkBrown"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <Button
                            android:id="@+id/tvmore"
                            android:backgroundTint="@color/Gold"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:layout_height="35dp"
                            android:text="@string/details"
                            android:layout_marginLeft="24dp"
                            android:textSize="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/earned"
                                android:textSize="14dp"
                                android:textColor="@color/LightBrown"/>

                            <TextView
                                android:id="@+id/tvreferralamount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/DarkBrown"
                                android:layout_marginRight="24dp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <Button
                            android:id="@+id/tvwithdrwl"
                            android:backgroundTint="@color/Gold"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:layout_height="35dp"
                            android:text="@string/transactions"
                            android:layout_marginRight="24dp"
                            android:textSize="10dp"/>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llmoneyicon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/lldetails"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:src="@drawable/money_icon" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llreferral"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/llmoneyicon"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:background="@drawable/referral_bg">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your referral code"
                            android:gravity="center"
                            android:textColor="@color/LightBrown"
                            android:textSize="14dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvreferralcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:gravity="center"
                            android:textColor="@color/DarkBrown"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/LightBrown"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"/>

                    <ImageView
                        android:id="@+id/ivcopy"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/copy_icon"/>

                </LinearLayout>

                <TextView
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/llreferral"
                    android:textColor="@color/black"
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!--            <LinearLayout-->
                <!--                android:id="@+id/llicons"-->
                <!--                android:layout_below="@id/llreferral"-->
                <!--                android:layout_marginTop="50dp"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:orientation="horizontal">-->

                <!--                <ImageView-->
                <!--                    android:id="@+id/iv_whatsapp"-->
                <!--                    android:layout_width="30dp"-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:layout_height="30dp"-->
                <!--                    android:src="@drawable/whatsapp_referral"/>-->

                <!--                <ImageView-->
                <!--                    android:id="@+id/iv_messenger"-->
                <!--                    android:layout_width="30dp"-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:layout_height="30dp"-->
                <!--                    android:src="@drawable/messenger_referral"/>-->

                <!--                <ImageView-->
                <!--                    android:id="@+id/iv_instagram"-->
                <!--                    android:layout_width="30dp"-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:layout_height="30dp"-->
                <!--                    android:src="@drawable/instagram_referral"/>-->

                <!--                <ImageView-->
                <!--                    android:id="@+id/iv_textmessage"-->
                <!--                    android:layout_width="30dp"-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:layout_height="30dp"-->
                <!--                    android:src="@drawable/textmessage"/>-->

                <!--            </LinearLayout>-->

                <Button
                    android:id="@+id/btrefer"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="24dp"
                    android:text="@string/refer_now"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background"
                    android:backgroundTint="@color/Gold"
                    android:layout_below="@id/message"/>

            </RelativeLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>