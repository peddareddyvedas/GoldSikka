<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/frame_layout"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/llinformation"
                android:background="@color/colorWhite"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTransparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/dr1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/goldsikkalogo" />

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text=""
                            android:textColor="@color/DarkBrown"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="30dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/uname"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text=""
                                android:textColor="@color/Gold" />

                            <TextView
                                android:id="@+id/uid"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text=""
                                android:textColor="@color/Gold" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.appcompat.widget.Toolbar>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/LightBrown2"/>

                <TextView
                    android:layout_marginRight="10dp"
                    android:visibility="visible"
                    android:id="@+id/tv_second_title"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/DarkBrown"
                    android:textSize="20dp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvliverate"
                            android:gravity="center"
                            android:textColor="@color/DarkBrown"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tvgold_grams"
                            android:textColor="@color/DarkBrown"
                            android:text="Gold Rate / 1 gram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <View
                        android:layout_marginTop="10dp"
                        android:background="@color/DarkBrown"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/DarkBrown"
                        android:text="Order Summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_marginTop="10dp"
                        android:background="@color/DarkBrown"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_weight="1"
                                android:gravity="start"
                                android:textColor="@color/DarkBrown"
                                android:text="Quantity"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tv_quantity"
                                android:layout_weight="1"
                                android:textColor="@color/DarkBrown"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_weight="1"
                                android:gravity="start"
                                android:textColor="@color/DarkBrown"
                                android:text="Amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tv_amount"
                                android:layout_weight="1"
                                android:textColor="@color/DarkBrown"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

<!--                        <LinearLayout-->
<!--                            android:layout_marginTop="10dp"-->
<!--                            android:gravity="center"-->
<!--                            android:layout_weight="1"-->
<!--                            android:orientation="horizontal"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content">-->

<!--                            <TextView-->
<!--                                android:layout_weight="1"-->
<!--                                android:gravity="start"-->
<!--                                android:textColor="@color/textcolorprimary"-->
<!--                                android:text="GST %"-->
<!--                                android:layout_width="0dp"-->
<!--                                android:layout_height="wrap_content"/>-->

<!--                            <TextView-->
<!--                                android:id="@+id/tv_tax"-->
<!--                                android:layout_weight="1"-->
<!--                                android:textColor="@color/textcolorprimary"-->
<!--                                android:layout_width="0dp"-->
<!--                                android:layout_height="wrap_content"/>-->

<!--                        </LinearLayout>-->



                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_weight="1"
                                android:gravity="start"
                                android:textColor="@color/DarkBrown"
                                android:text="Tax Amount"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tv_totaltaxamount"
                                android:layout_weight="1"
                                android:textColor="@color/DarkBrown"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/wallet_layout"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/wallet_check"
                                android:layout_width="30dp"
                                android:layout_height="20dp"/>

                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:textColor="@color/black"
                                    android:text="Use Booking Account"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/tv_wallet_money"
                                    android:textColor="@color/black"
                                    android:text=""
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </LinearLayout>

                        <EditText
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
                            android:id="@+id/et_wallet_money"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:background="@drawable/edittext_background"
                            android:drawablePadding="10dp"
                            android:inputType="number"
                            android:hint="@string/wallet_hint"
                            android:textColorHint="@color/LightBrown"
                            android:drawableLeft="@drawable/rupeerupee"
                            android:paddingLeft="12dp"/>

                        <TextView
                            android:layout_marginLeft="24dp"
                            android:visibility="gone"
                            android:id="@+id/tv_wallet_error"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:textColor="@color/DarkBrown"
                                android:text="Amount Payable"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tv_paybleamount"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:textColor="@color/DarkBrown"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/doyouhave"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/tvknowother"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:text="@string/do_you_have_any_referral_code"
                            android:textColor="@color/LightBrown"/>

                        <EditText
                            android:visibility="gone"
                            android:id="@+id/etreferralcode"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginLeft="24dp"
                            android:background="@drawable/referral_bg"
                            android:hint="@string/referral_code"
                            android:layout_below="@id/doyouhave"
                            android:textColor="@color/DarkBrown"
                            android:textColorHint="@color/LightBrown"
                            android:textSize="14dp"
                            android:paddingLeft="12dp"/>

                        <TextView
                            android:textColor="@color/red"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="10dp"
                            android:id="@+id/tv_referal_code_error"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="24dp"
                        android:gravity="center">

                        <pl.droidsonroids.gif.GifImageView
                            android:layout_marginTop="24dp"
                            android:layout_gravity="center"
                            android:id="@+id/loading_gif"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:tint="@color/primarybackground"
                            android:src="@drawable/loading_gif" />

                        <Button
                            android:id="@+id/btn_payment"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:text="Payment"
                            android:textSize="18dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/button_background"
                            android:backgroundTint="@color/Gold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>