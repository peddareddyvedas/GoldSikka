<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:id="@+id/frame_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/goldsikka_logo2" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text=""
                    android:textColor="@color/DarkBrown"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/uname"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@color/Gold" />

                    <TextView
                        android:id="@+id/uid"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@color/Gold" />
                </LinearLayout>
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linearlayout"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/shopping_cart"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:tint="@color/primarybackground"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColorHint="@color/textcolorprimary"
                android:hint="No Items Added"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

         <LinearLayout
             android:id="@+id/ll_cartlayout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/ll_cartaddress"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="10sp"
                android:gravity="center_vertical"
                android:background="@drawable/border"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_location_on_24"/>

                <TextView
                    android:id="@+id/addaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add address"
                    android:textColor="@color/textcolorprimary"
                    android:textSize="17sp"
                    android:gravity="start"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

             <ScrollView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_below="@id/llcheckout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/ll_cardlist">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_product_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:visibility="gone"
                android:id="@+id/ll_savelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <LinearLayout
            android:layout_below="@id/llcheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="10sp"
                android:gravity="center_vertical"
                android:background="@color/textcolorprimary"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <!--                <ImageView-->
                <!--                    android:layout_width="40dp"-->
                <!--                    android:layout_height="25dp"-->
                <!--                    android:src="@drawable/ic_baseline_location_on_24"/>-->

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saved Products:"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp"
                    android:gravity="start"
                    android:textStyle="bold" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_margin="5dp"
                android:id="@+id/rv_saveitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>

        </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:id="@+id/llcheckout"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_cartamount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Rs."
                        android:layout_margin="10sp"
                        android:layout_marginLeft="10sp"
                        android:textColor="@color/textcolorprimary"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btn_check"
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:text="Checkout"
                        android:textColor="@color/textcolorprimary"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="end|center"
                        android:layout_margin="10sp"
                        android:background="@drawable/buttonborder"
                        android:textSize="15sp"/>
                </LinearLayout>

            </LinearLayout>



     </LinearLayout>

             </ScrollView>
    </LinearLayout>

    </LinearLayout>

</FrameLayout>


