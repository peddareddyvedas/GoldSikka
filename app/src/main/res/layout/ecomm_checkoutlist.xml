<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_list_card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/white"
        android:elevation="8dp"
        android:background="@color/LightBrown2"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/about">

            </ImageView>

            <TextView
                android:id="@+id/text_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img"
                android:layout_margin="10dp"
                android:text="Quantity"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/text_quantity_per"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="1 %"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/text_quantity_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:gravity="end"
                android:text="price"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_gst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_quantity"
                android:layout_marginStart="10dp"
                android:text="GST"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/text_gst_per"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_quantity_per"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="2 %"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/text_gst_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_quantity_price"
                android:gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="price"
                android:textColor="@color/black"
                />


            <TextView
                android:id="@+id/text_VA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_gst"
                android:layout_margin="10dp"
                android:text="VA"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/text_VA_per"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_gst_per"
                android:gravity="center"
               android:layout_marginTop="10dp"
                android:text="3 %"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/text_VA_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_gst_price"
                android:gravity="end"
              android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="price"
                android:textColor="@color/black"
                />
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/text_VA"
                android:background="#000"/>



            <TextView
                android:id="@+id/text_total_per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:layout_toLeftOf="@id/text_total_price"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:text="Total :"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/text_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="price"
                android:textColor="@color/black"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>