<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    android:background="@color/colorTransparent"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">


    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/popimg"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:scaleType="fitXY"
            android:src="@drawable/predictpopup" />

        <TextView
            android:id="@+id/tvpoptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popimg"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:text=""
            android:textColor="@color/textcolorprimary"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvpredictaccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvpoptitle"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:text=""
            android:textColor="@color/textcolorprimary"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/Gold"
            android:src="@drawable/popadd_closeicon" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>