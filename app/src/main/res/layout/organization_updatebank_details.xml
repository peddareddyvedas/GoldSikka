<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/goldsikka_logo2" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="end"
                android:text=""
                android:textColor="@color/DarkBrown"
                android:textSize="13dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/uname"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text=""
                    android:textColor="@color/Gold" />

                <TextView
                    android:id="@+id/uid"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text=""
                    android:textColor="@color/Gold" />
            </LinearLayout>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/LightBrown2"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_accountname"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/Account_Holder_Name"
                android:paddingLeft="12dp"
                android:inputType="text"
                android:textColor="@color/DarkBrown"
                android:textColorHint="@color/LightBrown"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text=""
                android:textColor="@color/red"
                android:id="@+id/tv_accountname"/>

            <EditText
                android:id="@+id/et_accountnumber"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/Account_Number"
                android:inputType="number"
                android:textColor="@color/DarkBrown"
                android:textColorHint="@color/LightBrown"
                android:textSize="16dp"
                android:paddingLeft="12dp"
                android:textStyle="bold" />
            <TextView
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text=""
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/red"
                android:id="@+id/tv_accountnumber"/>
            <EditText
                android:id="@+id/et_bankname"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/Bank_Name"
                android:inputType="text"
                android:textColor="@color/DarkBrown"
                android:textColorHint="@color/LightBrown"
                android:textSize="16dp"
                android:paddingLeft="12dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_bankname"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text=""
                android:textColor="@color/red" />
            <EditText
                android:id="@+id/et_bankbranch"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/Branch_Name"
                android:inputType="text"
                android:textColor="@color/DarkBrown"
                android:textColorHint="@color/LightBrown"
                android:textSize="16dp"
                android:paddingLeft="12dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_bankbranch"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text=""
                android:textColor="@color/red"
                />
            <EditText
                android:id="@+id/et_ifsccode"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/IFSC_Code"
                android:inputType="text"
                android:textColor="@color/DarkBrown"
                android:textColorHint="@color/LightBrown"
                android:textSize="16dp"
                android:paddingLeft="12dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_ifsc"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text=""
                android:textColor="@color/red"
                />


            <Button
                android:id="@+id/btn_add"
                android:layout_marginTop="188dp"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/button_background"
                android:backgroundTint="@color/Gold"
                android:text="@string/Save"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>